        <header class="first">
        <nav class="navbar navbar-expand">
            <div class="container-fluid">
              <a href="/"><p>PLANET PERKS</p></a>
              <ul class="nav-links">
                <% if(!user){ %>
                    <li><a href="/users/login">Login</a></li>
                    <li><a href="/users/new">Signup</a></li>
                <% } else { %>
                    <li><a href="/stories/newEvents" >New Event</a></li>
                    <li><a href='/users/profile'>Profile</a></li>
                    <li><a href='/users/logout'>Logout</a></li>
                <% } %>
             </ul>
            </div>
        </nav>
    </header>

    <header class="second">
        <nav class="navbar navbar-expand">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a href="/" >Home</a>
                    </li>
                    <li class="nav-item">
                        <a href="/stories" >Events</a>
                    </li>
                </ul>
                <% if(firstName && lastName){ %>
                    <div class="li-right nav-item text-white">
                        <ul>
                            <li>Welcome <%= firstName+' '+lastName %>!</li>
                        </ul>
                    </div>
                <% } %>
              </div>
        </nav>
    </header>
