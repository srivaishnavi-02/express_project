<%- include('../partials/header.ejs') %>
<main>

        <!-- form section starts here -->
        <section id="hero" class="new-hero">
            <div class="container">
                <form action = '/stories' enctype="multipart/form-data" method = 'POST'>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label" for="category">Category</label>
                        <div class="col-sm-10">
                            <select class="form-control" id="category" name="category">
                                <option value="">Select a Category</option>
                                <option value="Virtual Fair">Virtual Fair</option>
                                <option value="Conference">Conference</option>
                                <option value="Webinar">Webinar</option>
                                <option value="Hackathon">Hackathon</option>
                                <option value="Recycle Challenge">Recycle Challenge</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">Host Name</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="host" name="host" placeholder="Name of the Host" required>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label for="title" class="col-sm-2 col-form-label">Title</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="title" name="title" placeholder="title" required>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">Details</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" id="content" name="content" placeholder="description" required></textarea>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">Where</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" id="location" name="location" placeholder="location" required>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">Start</label>
                        <div class="col-sm-10">
                            <input type="datetime-local" class="form-control" id="startTime" name="startTime" required>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">End</label>
                        <div class="col-sm-10">
                            <input type="datetime-local" class="form-control" id="endTime" name="endTime" required>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <label class="col-sm-2 col-form-label">Image</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control" id="image" name="image" accept="image/*" required>
                        </div>
                    </div>
                    <div class="form-group row mb-2">
                        <div class="col-sm-10 offset-sm-2" >
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </main>

<%- include('../partials/footer.ejs') %>
