<%- include('../partials/header.ejs')%>
<div class = "content">
    <div class="scrollable-table">
    <form method="post" action="/stories/<%=story.id%>?_method=PUT" enctype="multipart/form-data">
        <table>
            <tr>
                <td><label for="title" >Title</label></td>
                <td><input type="text" id="title" name="title" value = "<%= story.title%>" class = "fixed-width"></td>
            </tr>
            <tr><td class = "align-top"><label for="content">Content</label></td>
                <td><textarea rows="5" id="content" name="content" class = "fixed-width"><%= story.content%></textarea></td>
            </tr>
            <tr>
                <td><label for="location" >Location</label></td>
                <td><input type="text" id="location" name="location" value = "<%= story.location%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="host" >Host</label></td>
                <td><input type="text" id="host" name="host" value = "<%= story.host%>" class = "fixed-width"></td>
            </tr>          
            <tr>
                <td><label for="category" >Category</label></td>
                <td><input type="text" id="category" name="category" value = "<%= story.category%>" class = "fixed-width"></td>
            </tr>

            <tr>
                <td><label for="date" >Date</label></td>
                <td><input type="text" id="date" name="date" value = "<%= story.date%>" class = "fixed-width"></td>
            </tr>

            <tr>
                <td><label for="startTime" >Start Time</label></td>
                <td><input type="text" id="startTime" name="startTime" value = "<%= story.startTime%>" class = "fixed-width"></td>
            </tr>

            <tr>
                <td><label for="endTime" >End Time</label></td>
                <td><input type="text" id="endTime" name="endTime" value = "<%= story.endTime%>" class = "fixed-width"></td>
            </tr>
            <tr>
                <td><label for="image" >Image</label></td>
                <td><input type="file" id="image" name="image" required></td>
            </tr> 
            <tr>
                <td colspan="2" class = "align-right"><button>Submit</button></td>
            </tr>

            </table>     
    </form>
</div>   

    </div>
    <%- include('../partials/footer.ejs')%>
